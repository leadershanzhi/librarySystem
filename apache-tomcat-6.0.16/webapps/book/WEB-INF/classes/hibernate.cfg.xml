<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.     -->
<hibernate-configuration>

<session-factory>
	<!-- 固定的配置，配置连接数据库 -->
	<property name="connection.driver_class">
		oracle.jdbc.driver.OracleDriver
	</property>
	<property name="connection.url">
		jdbc:oracle:thin:@localhost:1521:orcl
	</property>
	<property name="connection.username">book</property>
	<property name="connection.password">book</property>
	<!-- 配置方言 -->
	<property name="hibernate.dialect">
		org.hibernate.dialect.Oracle10gDialect
	</property>
	<!-- 把hbm语句转成数据库语言 -->
	<property name="hibernate.hbm2ddl.auto">update</property>
	<!-- 在控制台上是否显示sql语句的配置 -->
	<property name="hibernate.show_sql">false</property>

	<!-- 引入映射文件 -->
	<mapping resource="com/shxt/bo/Books.hbm.xml" />
	<mapping resource="com/shxt/bo/Readers.hbm.xml" />
	<mapping resource="com/shxt/bo/Lends.hbm.xml" />
	<mapping resource="com/shxt/bo/Dict.hbm.xml" />
	<mapping resource="com/shxt/bo/Messages.hbm.xml" />
	<mapping resource="com/shxt/bo/LiuYan.hbm.xml"/>
    <mapping resource="com/shxt/bo/HuiFu.hbm.xml"/>
</session-factory>

</hibernate-configuration>